    &amp;lt;?= $this-&amp;gt;Form-&amp;gt;create() ?&amp;gt;
    &amp;lt;div align=&quot;center&quot;&amp;gt;
    &amp;lt;fieldset&amp;gt;
        &amp;lt;legend&amp;gt;&amp;lt;?= __('&amp;lt;h3&amp;gt;&amp;lt;b&amp;gt;Favor entrar seu com login e senha&amp;lt;/b&amp;gt;&amp;lt;/h3&amp;gt;') ?&amp;gt;&amp;lt;/legend&amp;gt;
        &amp;lt;?= $this-&amp;gt;Form-&amp;gt;input('username', ['label'=&amp;gt;'Login', 'class'=&amp;gt;'col4']) ?&amp;gt;
        &amp;lt;?= $this-&amp;gt;Form-&amp;gt;input('password',['label'=&amp;gt;'Senha', 'class'=&amp;gt;'col4']) ?&amp;gt;
    &amp;lt;/fieldset&amp;gt;
    &amp;lt;?= $this-&amp;gt;Form-&amp;gt;button(__('Acessar')); ?&amp;gt;
    &amp;lt;?= $this-&amp;gt;Form-&amp;gt;end() ?&amp;gt;
    &amp;lt;/div&amp;gt;
