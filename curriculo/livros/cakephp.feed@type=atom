&lt;pre class=&quot;language-php&quot;&gt;&lt;code&gt;use Cake\Datasource\ConnectionManager;

$dsn = 'mysql://root:password@localhost/my_database';
ConnectionManager::config('default', ['url' =&amp;gt; $dsn]);
