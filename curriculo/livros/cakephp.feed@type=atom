                ['confirm' =&amp;gt; 'Are you sure?'])
            ?&amp;gt;
            &amp;lt;?= $this-&amp;gt;Html-&amp;gt;link('Edit', ['action' =&amp;gt; 'edit', $article-&amp;gt;id]) ?&amp;gt;
        &amp;lt;/td&amp;gt;
    &amp;lt;/tr&amp;gt;
    &amp;lt;?php endforeach; ?&amp;gt;

