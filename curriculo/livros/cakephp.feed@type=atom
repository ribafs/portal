    echo $this-&amp;gt;Form-&amp;gt;control('title');
    echo $this-&amp;gt;Form-&amp;gt;control('body', ['rows' =&amp;gt; '3']);
    echo $this-&amp;gt;Form-&amp;gt;button(__('Save Article'));
    echo $this-&amp;gt;Form-&amp;gt;end();
?&amp;gt;

