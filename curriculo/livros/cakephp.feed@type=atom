    'Dashboard',
    ['controller' =&amp;gt; 'Dashboards', 'action' =&amp;gt; 'index', '_full' =&amp;gt; true]
);
echo $this-&amp;gt;Html-&amp;gt;link(
    'Delete',
    ['controller' =&amp;gt; 'Recipes', 'action' =&amp;gt; 'delete', 6],
    ['confirm' =&amp;gt; 'Are you sure you wish to delete this recipe?'],
);
echo $this-&amp;gt;Html-&amp;gt;link('View image', [
    'controller' =&amp;gt; 'Images',
    'action' =&amp;gt; 'view',
    1,
    '?' =&amp;gt; ['height' =&amp;gt; 400, 'width' =&amp;gt; 500]
]);
